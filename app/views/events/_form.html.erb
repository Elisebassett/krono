<%= form_with model: @event, remote: true do |f| %>
  
<!--****** Text based params ******-->
  <div class="input-field">
    <%= f.text_field :title %>
    <% if !@event.title %>
      <%= f.label :title, 'Title' %>  
    <% end %>
  </div>
  <div class="input-field">
    <%= f.text_area :description, class: 'materialize-textarea' %>
    <% if !@event.description %>
      <%= f.label :description, 'description' %> 
    <% end %> 
  </div>
<!--***** Date based params ******-->
  <!-- Date params -->
  <div class="input-field">
    <p>Start Date</p>
    <%= f.date_field :start, class: "datepicker start_date" %>
  </div>
  <div class="input-field">
    <p>End Date</p>
    <%= f.date_field :end, class: "datepicker end_date" %>
  </div>

  <!-- Time Params -->
   <div class="input-field">
    <p>Start Time</p>
    <%= f.text_field :start_time, name: 'event[start_time]', class: "timepicker start_time" %>
  </div>
  <div class="input-field">
    <p>End Time</p>
    <%= f.text_field :end_time, class: "timepicker end_time" %>
  </div>
<!--***** Color ******-->
  <div class="input-field">
    <%= f.select(:color) do %>
      <option value="" disabled selected>Select a Tag</option>
      <option class="work-tag" value="maroon">Work</option>
      <option class="school-tag" value="orange">School</option>
      <option class="other-tag" value="pink">Other</option>
    <% end %>
  </div>
  
  <%= f.submit "Submit" %>

<% end %>