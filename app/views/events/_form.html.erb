<%= form_with model: @event, remote: true do |f| %>
  
  <div class="input-field">
    <%= f.text_field :title %>
    <%= f.label :title, 'Title' %>  
  </div>
  <div class="input-field">
    <%= f.text_area :description, class: 'materialize-textarea' %>
    <%= f.label :description, 'description' %>  
  </div>
  <div class="input-field">
    <%= f.date_field :start, class: "datepicker start_time" %>
  </div>
  <div class="input-field">
    <%= f.date_field :end, class: "datepicker end_time" %>
  </div>
  <div class="input-field">
    <%= f.text_field :color %>
    <%= f.label :color, 'color' %>  
  </div>
  
  <%= f.submit "Create" %>

<% end %>