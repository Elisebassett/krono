<%= form_with model: @event, remote: true do |f| %>
  
  <div class="input-field">
    <%= f.text_field :title %>
    <% if !@event.title %>
      <%= f.label :title, 'Title' %>  
    <% end %>
  </div>
  <div class="input-field">
    <%= f.text_area :description, class: 'materialize-textarea' %>
    <% if !@event.description %>
      <%= f.label :description, 'description' %> 
    <% end %> 
  </div>
  <div class="input-field">
    <%= f.date_field :start, class: "datepicker start_time" %>
  </div>
  <div class="input-field">
    <%= f.date_field :end, class: "datepicker end_time" %>
  </div>
  <div class="input-field">
    <%= f.text_field :color %>
    <% if !@event.color %>
      <%= f.label :color, 'color' %> 
    <% end %> 
  </div>
  
  <%= f.submit "Submit" %>

<% end %>