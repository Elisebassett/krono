

	  <div class="row goal_card" id="<%= goal.id %>">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= goal.name %></span>
            <p><%= goal.description %></p>
          </div>
          <div class="card-action">
						<%= link_to "Edit", edit_goal_path(goal), remote: :true %>
            <%= link_to "Delete", goal, class: "delete_goal", method: :delete, remote: :true, data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
	
